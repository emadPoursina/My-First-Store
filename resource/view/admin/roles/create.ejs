<div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
    <h2>ایجاد نقش جدید</h2>
</div>
<form class="form-horizontal" action="/admin/users/roles/create" method="post" >

  <%- include(viewPath('layout/error-messages')) %> 

  <div class="form-group row">
    <div class="col">
      <label for="name" class="control-label font-weight-bold">عنوان نقش</label>
      <input type="text" class="form-control" name="name" id="name" placeholder="عنوان را وارد کنید" value="<%= old('name'); %> ">
    </div>
  </div>
  <div class="form-group row">
    <div class="col">
      <label for="label" class="control-label font-weight-bold">توضیح نقش</label>
      <input type="text" class="form-control" name="label" id="label" placeholder="عنوان را وارد کنید" value="<%= old('label'); %> ">
    </div>
  </div>
  <div class="form-group row">
      <div class="col">
			<%- include(viewPath('layout/multipleSelect'), {
				containerId: 'permission-select',
				selectOptions: permissions,
				options: {
					multiple: true,
					search: false,
					hiddenInputName: 'permissions',
				}}); %> 
      </div>
  </div>
  <div class="form-group row">
      <div class="col">
        <button type="submit" class="btn btn-danger">ایجاد</button>
      </div>
  </div>
</form>