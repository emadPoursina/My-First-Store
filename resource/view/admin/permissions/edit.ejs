<div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
	<h2>ویرایش قابلیت</h2>
</div>
<form class="form-horizontal" action="/admin/users/permissions/<%= permission._id %>/?_method=PUT" method="POST" >

	<%- include(viewPath('layout/error-messages')); %> 

	<div class="form-group row">
		<div class="col">
			<label for="name" class="control-label font-weight-bold">عنوان قابلیت</label>
			<input type="text" class="form-control" name="name" id="name" placeholder="عنوان را وارد کنید" value="<%= permission.name %>">
		</div>
	</div>
	<div class="form-group row">
		<div class="col">
			<label for="label" class="control-label font-weight-bold">توضیح قابلیت</label>
			<input type="text" class="form-control" name="label" id="label" placeholder="عنوان را وارد کنید" value="<%= permission.label%>">
		</div>
	</div>
	<div class="form-group row">
		<div class="col">
			<button type="submit" class="btn btn-danger">تایید</button>
		</div>
	</div>
</form>