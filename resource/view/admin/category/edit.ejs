<div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
	<h2>ویرایش دسته</h2>
</div>
<form class="form-horizontal" action="/admin/categories/<%= category._id %>/?_method=PUT" method="POST" >

	<%= include(viewPath('layout/error-messages')); %> 

	<div class="form-group row">
		<div class="col">
			<label for="name" class="control-label font-weight-bold">عنوان دسته</label>
			<input type="text" class="form-control" name="name" id="name" placeholder="عنوان را وارد کنید" value="<%= category.name %> ">
		</div>
	</div>
	<div class="form-group row">
		<div class="col">
			<label for="parent" class="control-label font-weight-bold font-weight-bold">دوره مربوطه</label>
			<select name="parent" id="parent" class="form-control">
				<option  value="none" <%= category.parent === null ? 'selected' : ''; %>>هیچکدام</option>
				<% categories.forEach(category2 => { %> 
					<option value="<%= category2._id %>" <%= String(old('parent', category.parent)) === String(category2._id) ? 'selected' : ''; %>><%= category2.name %> </option>
				<% }); %> 
			</select>
		</div>
	</div>
	<div class="form-group row">
		<div class="col">
			<button type="submit" class="btn btn-danger">تایید</button>
		</div>
	</div>
</form>